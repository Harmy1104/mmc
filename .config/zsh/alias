alias rg="rg --hidden --ignore .git -g"
alias tree="tree --gitignore"
alias fd="fd -u"
alias echo="echo -e"
alias grep="grep --color=auto"
alias ql="qlmanage -p $1 &> /dev/null"
# reading disks
alias df='df -h'

